<div class="row">
    <div class="col-md-3 text-center profile-pic">
      <%= image_tag @user.profile.avatar.url %>
    </div>
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="job_title_icon"><%= job_title_icon %></span><%= @user.profile.job_title %><br/></h3>
      
      <div class="well profile-description">
        <h3>Description</h3>
        <%= @user.profile.description %><br/>
      </div>
      <% if current_user.plan_id == 2 %>
        <div class="well contact-info">
          <h3>Contact Info</h3>
          <%= @user.profile.phone_number %><br/>
          <%= @user.profile.contact_email %><br/>
        </div>
      <% end %>
      
    </div>
  
</div>